# Move to a child directory
fd() {
  local dir
  dir=$(find "${1:-.}" -type d -print 2> /dev/null | fzf --preview 'ls -la {}' --header="Select a directory to navigate" +m) &&
  cd "$dir"
}

# history
fh() {
  eval $( ([ -n "$ZSH_NAME" ] && fc -l 1 || history) | fzf +s --tac | sed -E 's/ *[0-9]*\*? *//' | sed -E 's/\\/\\\\/g')
}

fs() {
  if [ ! "$#" -gt 0 ]; then echo "Need a string to search for!"; return 1; fi
  local file
  file=$(rg --files-with-matches --no-messages "$1" | fzf --preview "highlight -O ansi -l {} 2> /dev/null | rg --colors 'match:bg:yellow' --ignore-case --pretty --context 10 '$1' || rg --ignore-case --pretty --context 10 '$1' {}")
  if [[ -n "$file" ]]; then
      xdg-open "$file"
  fi
}

# Pacman & Yay: list all packages known
f_install(){
  local package="$1"
  local manager

  if [ -z "$package" ] || (! pacman -Si "$package" &>/dev/null && ! yay -Si "$package" &>/dev/null); then
    package=$( (pacman -Slq; yay -Slq) | sort -u | fzf --preview 'pacman -Si {} || yay -Si {}')
  fi

  if pacman -Si "$package" &>/dev/null; then
    manager="pacman"
  elif yay -Si "$package" &>/dev/null; then
    manager="yay"
  fi

  if [ -n "$package" ] && [ -n "$manager" ]; then
    echo "You have selected: $package"
    sudo $manager -S "$package"
  else
    echo "No package selected or package not found."
  fi
}



# Pacman & Yay : list all packages installed
f_list(){
  (pacman -Qq; yay -Qq) | sort -u | fzf --preview 'pacman -Qil {} || yay -Qil {}' \
    --bind 'enter:execute(pacman -Qil {} || yay -Qil {} | less)'
}

# Pacman & Yay : remove all packages installed
f_remove(){
  local package="$1"

  if [ -z "$package" ] || (! pacman -Qq "$package" &>/dev/null && ! yay -Qq "$package" &>/dev/null); then
    package=$( (pacman -Qq; yay -Qq) | sort -u | fzf --preview 'pacman -Qil {} || yay -Qil {}')
  fi

  if [ -n "$package" ]; then
    echo "You have selected: $package"
    
    if pacman -Qq "$package" &>/dev/null; then
      sudo pacman -Rns "$package"
    elif yay -Qq "$package" &>/dev/null; then
      yay -Rns "$package"
    fi
  else
    echo "No package selected or package not found."
  fi
}


