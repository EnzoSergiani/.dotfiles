# Open the selected file with the default application based on file type
ff() {
  IFS=$'\n' files=($(fzf-tmux --query="$1" --multi --select-1 --exit-0 --preview='cat {}'))
  if [[ -n "${files[*]}" ]]; then
    for file in "${files[@]}"; do
      xdg-open "$file"
    done
  fi
}


