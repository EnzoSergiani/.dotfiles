# Open the selected file with the default application based on file type
fzf_file() {
  IFS=$'\n' files=($(fzf-tmux --query="$1" --multi --select-1 --exit-0 --preview='cat {}'))
  if [[ -n "${files[*]}" ]]; then
    for file in "${files[@]}"; do
      xdg-open "$file"
    done
  fi
}

# Move to a child directory
fzf_move() {
  local dir
  dir=$(find "${1:-.}" -type d -print 2> /dev/null | fzf --preview 'ls -la {}' --header="Select a directory to navigate" +m) &&
  cd "$dir"
}

# history
fzf_history() {
  eval $( ([ -n "$ZSH_NAME" ] && fc -l 1 || history) | fzf +s --tac | sed -E 's/ *[0-9]*\*? *//' | sed -E 's/\\/\\\\/g')
}

fzf_search() {
  if [ ! "$#" -gt 0 ]; then echo "Need a string to search for!"; return 1; fi
  local file
  file=$(rg --files-with-matches --no-messages "$1" | fzf --preview "highlight -O ansi -l {} 2> /dev/null | rg --colors 'match:bg:yellow' --ignore-case --pretty --context 10 '$1' || rg --ignore-case --pretty --context 10 '$1' {}")
  if [[ -n "$file" ]]; then
      xdg-open "$file"
  fi
}

# DNF: list all packages known
fzf_install(){
  local package="$1"

  if [ -z "$package" ] || ! dnf info "$package" &>/dev/null; then
    package=$(dnf list available | awk '{print $1}' | tail -n +2 | fzf --preview 'dnf info {}')
  fi

  if [ -n "$package" ]; then
    echo "You have selected: $package"
    sudo dnf install -y "$package"
  else
    echo "No package selected or package not found."
  fi
}

# DNF: list all packages installed
fzf_list(){
  dnf list installed | awk '{print $1}' | tail -n +2 | fzf --preview 'dnf info {}' \
    --bind 'enter:execute(dnf info {} | less)'
}

# DNF: remove all packages installed
fzf_remove(){
  local package="$1"

  if [ -z "$package" ] || ! dnf list installed "$package" &>/dev/null; then
    package=$(dnf list installed | awk '{print $1}' | tail -n +2 | fzf --preview 'dnf info {}')
  fi

  if [ -n "$package" ]; then
    echo "You have selected: $package"
    sudo dnf remove -y "$package"
  else
    echo "No package selected or package not found."
  fi
}


