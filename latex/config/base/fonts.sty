\usepackage{lmodern}

% Set the normal size font
\newcommand{\setnormalsize}{\renewcommand{\normalsize}{\fontsize{\normalsizefont}{\normalsizeline}\selectfont}}

% Set the paragraph skip length
\newcommand{\setparskip}{\setlength{\parskip}{\parskiplength}}

% Set the base line stretch
\newcommand{\setbaselinestretch}{\renewcommand{\baselinestretch}{\baselinestretchvalue}}

% Set the font size
\newcommand{\normalsizefont}{12pt}
\setnormalsize

% Set the line height
\newcommand{\normalsizeline}{13pt}

% Set the paragraph skip length
\newcommand{\parskiplength}{10pt}
\setparskip

% Set the baseline stretch value
\newcommand{\baselinestretchvalue}{1}
\setbaselinestretch
