% #1 : key
% #2 : acronym
% #3 : name en minuscules
% #4 : name avec majuscules
% #5 : description
\newcommand{\newglossaryentrywithacronym}[5]{%
	\newglossaryentry{#1_gls}{%
		name={#4},
		description={#5}
	}%
	\newacronym[
		first={#3 (\glslink{#1_gls}{#2})\glsadd{#1_gls}},
		text={\glslink{#1_gls}{#2}},
		description={\glslink{#1_gls}{#4}}
	]{#1}{#2}{#3}%
}
